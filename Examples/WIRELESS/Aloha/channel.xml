<channel bn="-108.0dBm">
	<propagation type="shadowing" sigma="1.0dB">
		RP(d)    = received power at distance d
		XP       = transmitted power
		X(sigma) = lognormal random Gaussian component
		<!-- I am making it long-distance by using the reference dist
		     of 1000m + low exponent -->
 		============================================================
		RP(d)/XP [dB] = -10 x 2.2 x log(d/1000.0m) + X(sigma) - 32.0
 		============================================================
	</propagation>
	<cutoff>-115.0dBm</cutoff>
	<ber>
