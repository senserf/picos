<!-- This is the network map file -->
<map>

    <aggregators>
	<node id="10" power="7" frequency="10"></node>
	<node id="11" power="7" frequency="10"></node>
    </aggregators>

    <collectors>
	<node id="102" power="7" frequency="15">Palmtree</node>
	<node id="103" power="7" frequency="15">Streamlet</node>
	<node id="104" power="7" frequency="15">Grass</node>
	<node id="115" power="7" frequency="15">Bushes</node>
	<node id="116" power="7" frequency="15">Flowers</node>
	<node id="117" power="7" frequency="15">Cactus</node>
	<node id="208" power="7" frequency="15">Gate</node>
    </collectors>

    <ossi id="10"></ossi>

    <converters>
	<snippet sensors="PAR">
		<!-- Just a random piece of code -->
		set value [expr $value * 0.0098]
	</snippet>
	<snippet sensors="TMP">
		<!-- This is the official formula for SHT -->
		set value [expr -39.62 + 0.01 * $value]
	</snippet>
	<snippet sensors="HUM">
		<!-- Another official formula for SHT -->
		set value [expr -4.0 + 0.0405 * $value - 0.0000028 * $value * \
			$value]
		if { $value < 0.0 } {
			set value 0.0
		} elseif { $value > 100.0 } {
			set value 100.0
		}
	</snippet>
	<snippet sensors="DIO">
		set value [expr $value * 0.005]
	</snippet>
	<snippet sensors="TMB">
		set value [expr ($value - 2048) / 16.0]
	</snippet>



    </converters>

    <sensors>

	<!-- Values in text are for emulation -->
	<sensor name="PAR A" label="PAR" node="102" emu="0-1024"></sensor>
	<sensor name="TMP A" label="T" node="102" emu="5500-6500"></sensor>
	<sensor name="HUM A" label="H" node="102" emu="1000-3000"></sensor>
	<sensor name="DIO A" label="PD" node="102" emu="0-2000"></sensor>
	<sensor name="TMB A" label="T2" node="102" emu="2300-2500"></sensor>

	<sensor name="PAR B" label="PAR" node="103" emu="0-1024"></sensor>
