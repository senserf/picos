<!-- This is the network map file -->
<map>

    <aggregators>
	<node id="10" power="7" frequency="10"></node>
    </aggregators>

    <collectors>
	<node id="128" power="7" frequency="30">Palmtree</node>
	<node id="129" power="7" frequency="30">Cactus</node>
    </collectors>

    <ossi id="10"></ossi>

    <converters>
	<snippet sensors="PAR">
		<!-- Just a random piece of code -->
		set value [expr $value * 0.0098]
	</snippet>
	<snippet sensors="TMP">
		<!-- This is the official formula for SHT -->
		set value [expr -39.62 + 0.01 * $value]
	</snippet>
	<snippet sensors="HUM">
		<!-- Another official formula for SHT -->
		set value [expr -4.0 + 0.0405 * $value - 0.0000028 * $value * \
			$value]
		if { $value < 0.0 } {
			set value 0.0
		} elseif { $value > 100.0 } {
			set value 100.0
		}
	</snippet>
	<snippet sensors="DIO">
		set value [expr $value * 0.005]
	</snippet>
	<snippet sensors="TMB">
		set value [expr ($value - 2048) / 16.0]
	</snippet>

    </converters>

    <sensors>

	<!-- Values in text are for emulation -->
	<sensor name="PAR A" label="PAR" node="128" emu="0-1024"></sensor>
	<sensor name="TMP A" label="T" node="128" emu="5500-6500"></sensor>
	<sensor name="HUM A" label="H" node="128" emu="1000-3000"></sensor>
	<sensor name="DIO A" label="PD" node="128" emu="0-2000"></sensor>
	<sensor name="TMB A" label="T2" node="128" emu="2300-2500"></sensor>

	<sensor name="PAR B" label="PAR" node="129" emu="0-1024"></sensor>
	<sensor name="TMP B" label="T" node="129" emu="5500-6500"></sensor>
	<sensor name="HUM B" label="H" node="129" emu="1000-3000"></sensor>
	<sensor name="DIO B" label="PD" node="129" emu="0-2000"></sensor>
	<sensor name="TMB B" label="T2" node="129" emu="2300-2500"></sensor>

    </sensors>

</map>
