<!-- This is the network map file -->
<map>

    <aggregators>
	<node id="10" power="7" frequency="10"></node>
    </aggregators>

    <collectors>
	<node id="101" power="7" frequency="15"></node>
	<node id="102" power="7" frequency="15"></node>
    </collectors>

    <ossi id="10"></ossi>

    <converters>
	<snippet sensors="PAR">
		<!-- Just a random piece of code -->
		set value [expr $value * 10.0]
	</snippet>
	<snippet sensors="TMP">
		<!-- This is the official formula for SHT -->
		set value [expr -39.62 + 0.01 * $value]
	</snippet>
	<snippet sensors="HUM">
		<!-- Another official formula for SHT -->
		set value [expr -4.0 + 0.0405 * $value - 0.0000028 * $value * \
			$value]
		if { $value < 0.0 } {
			set value 0.0
		} elseif { $value > 100.0 } {
			set value 100.0
		}
	</snippet>
    </converters>

    <sensors>

	<sensor name="PAR A" label="PAR" node="101"></sensor>
	<sensor name="TMP A" label="T" node="101"></sensor>
	<sensor name="HUM A" label="H" node="101"></sensor>
	<sensor name="DIO A" label="PD" node="101"></sensor>
	<sensor name="TMB A" label="T2" node="101"></sensor>

	<sensor name="PAR B" label="PAR" node="102"></sensor>
	<sensor name="TMP B" label="T" node="102"></sensor>
	<sensor name="HUM B" label="H" node="102"></sensor>
	<sensor name="DIO B" label="PD" node="102"></sensor>
	<sensor name="TMB B" label="T2" node="102"></sensor>

    </sensors>

</map>
