#!/bin/sh
if [ "x$1" = "x" ]; then
	bin="bin"
else
	bin=$1
fi
if [ "x$2" = "x" ]; then
	vpath=SOFTWARE
else
	vpath=$2
fi
cd SOURCES
echo "Compiling maker ..."
g++ -o maker maker.cc
if [ -e maker.exe ]; then
	# on cygwin
	strip maker.exe
else
	strip maker
fi
if [ "x$3" = "x" ]; then
	rtag="0"
else
	rtag=$3
fi
echo "Running maker for mks ..."
./maker -b -r $rtag << m_end
none


25


localhost
4442
mks
$bin
y
n


m_end
echo "Running maker for vuee ..."
./maker -b -r $rtag << v_end
none


25
$vpath/VUEE/PICOS

$vpath/PICOS/Apps/DataLib


vuee
$bin
y
n


v_end
